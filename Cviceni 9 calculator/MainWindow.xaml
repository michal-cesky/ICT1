        <Button x:Name="buttonMultiplication" Content="*" HorizontalAlignment="Left" Height="42" Margin="235,208,0,0" VerticalAlignment="Top" Width="58" Click="Button_Click"/>
        <Button x:Name="buttonMminus" Content="M-" HorizontalAlignment="Left" Height="42" Margin="161,150,0,0" VerticalAlignment="Top" Width="58" Click="Button_Click"/>
        <Button x:Name="buttonDivide" Content="/" HorizontalAlignment="Left" Height="42" Margin="235,150,0,0" VerticalAlignment="Top" Width="58" Click="Button_Click"/>
