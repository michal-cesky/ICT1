        <TextBox x:Name="Display" HorizontalAlignment="Left" Height="67" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="356"  Background="White" SelectionTextBrush="White">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="Black" Opacity="1"/>
            </TextBox.BorderBrush>
        </TextBox>
        <Button x:Name="buttonKC" Content="KC" HorizontalAlignment="Left" Height="42" Margin="308,150,0,0" VerticalAlignment="Top" Width="58" Click="Button_Click"/>
        <Button x:Name="buttonSUM" Content="SUM" HorizontalAlignment="Left" Height="42" Margin="308,266,0,0" VerticalAlignment="Top" Width="58" Click="Button_Click"/>
